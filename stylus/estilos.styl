//importo el otro archivo stylus de normalize y solo tendre un .css final
@import "nib"
@import "normalize.styl"

//personalizar prefijos
//vendor-prefixes = webkit o ms official papitas
/*
	animacion(prm)
		-webkit-animation prm
		-moz-animation prm
		-o-animation prm
		animation prm
		
		y ejecuto la funcion asi animacion(1s state infinite)
*/
//Creamos variables
gris_oscuro = #333333
gris_claro = #818181
rojo = #DF481B
gris_mas_claro = #f0f0f0


body
	font-size 16px
	font-family 'Varela Round', sans-serif
	
figure
	margin 0
img
	vertical-align top
.border-bottom
	border-bottom 1px solid gris_claro
.padding-tb
	padding 1em 0	
.left
	float left
.right
	float right
	
.round
	border-radius 50%
	overflow hidden
.wrap
	width 1000px
	margin auto
	overflow hidden




.actions
	position absolute
	bottom 0
	background rgba(black,.3)
	left 0
	right 0
	text-align right
	padding .5em .5em .4em .5em

.action
	color white
	font-size 1.5em
	margin-right 0.5em
	line-height 1
	padding 0
	&.gray
		color gris_oscuro

.button-menu
	position absolute
	left .5em
	top 50%
	color gris_oscuro
	font-size 1.5em
	margin-top -.9rem
	
//oocss clases
.container
	padding 1.4rem
	font-size 0
	text-align center
	

.relative 
	position relative
	
.menu
	display none
	
.header
	height 3.5em
	border-bottom 1px solid gray
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.name
	color gris_oscuro

.author
	color gris_claro
			
.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
		

.image
	position relative
	img
		max-width 100%		


	  	
.description
	text-align left	
	
.text-center
	text-align center	
	
.playing
	margin 0 auto
	max-width 360px
	width 100%
	.left
		float none
.padding
	padding 1em	

.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
			
	.total
		height 5px
		background gris_claro
		width 75%	
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
		animation 250s state infinite linear
		
	.circle
		background gris_oscuro
		height 10px
		width 10px
		border-radius 50%
		position absolute
		right 0
		top -2px
		animation 1s circle infinite 
		
@-webkit-keyframes state
	from
		width 0
	to
		width 100%

@-webkit-keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.playlist
	display none
.logo
	display none
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search-icon
	position absolute
	left .6em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .4em
	right .5em
	color gris_claro
	font-size 1.2em
//media queries
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			max-width 100%

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.header
		height auto
		border none
	.header
		.title
			display none
		.logo
			border-bottom 1px solid gris_claro
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
		background white
		display block
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			content ""
			border-left 7px solid transparent
			border-top 7px solid gris_claro
			border-right 7px solid transparent
			display inline-block
			margin-left .4em
	
	.menu
		display block
		background gris_mas_claro
		.item
			float left
			
			a
				color gris_oscuro
				text-transform uppercase
				text-decoration none
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro

	.list
		list-style none
		padding 0
		overflow hidden
		
	
	.search
		margin-right .5em
	.music
		width 32.5em
		.name
		.author
			display none
		.description
			border none
	.playing
		padding-top 1.3em
		&.large
			margin auto
			width 62.5em
			overflow hidden
		.left
			float left
	.playlist
		width 22em
		padding 0 2em
		border-left 1px solid gris_claro
		display block
		.item
			border-bottom 1px solid gris_claro
			padding .8em 0em
		.action
			color gris_claro
			font-size 14p