//importo el otro archivo stylus de normalize y solo tendre un .css final
@import "normalize.styl"

//Creamos variables
gris_oscuro = #333333
gris_claro = #818181

body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
.button-menu
	position absolute
	left .5em
	top 50%
	color black
	
//oocss clases
.container
	padding 1.4rem
	font-size 0
	text-align center
.relative 
	position relative
.menu
	display none
.header
	height 3.5em
	border-bottom 1px solid gray
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.name
	color gris_oscuro

.author
	color gris_claro
			
.song
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0